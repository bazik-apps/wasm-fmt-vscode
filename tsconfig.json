{
	"extends": [
		"@tsconfig/node-lts/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json",
		"@tsconfig/node-ts/tsconfig.json"
	],
	"include": [
		"src"
	],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"lib": [
			"ES2020",
			"WebWorker"
		],
		"noPropertyAccessFromIndexSignature": false,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noEmit": true
	}
}
